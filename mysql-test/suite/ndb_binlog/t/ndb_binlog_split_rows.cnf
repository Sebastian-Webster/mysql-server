!include include/default_mysqld.cnf
!include include/default_ndbd.cnf

[cluster_config.1]
NoOfReplicas=                  2
ndbd=,
ndb_mgmd=
mysqld=,,,
ndbapi=,,,,,
Checksum=1
PreSendChecksum=1

[mysqld]
# Make all mysqlds use cluster
ndbcluster
ndb-wait-connected=30
ndb-wait-setup=120
ndb-cluster-connection-pool=2
ndb-extra-logging=99
# Enable load data local functionality
local-infile=true

ndb-log-bin=1
# Use smaller than default cache size to save resources
ndb-log-cache-size=32768

# Run this suite with binlog-format=ROW by default
binlog-format=                 row

[cluster_config.mysqld.1.1]
NodeId= 11
Dedicated= 1

[cluster_config.mysqld.2.1]
NodeId= 12
Dedicated= 1

[cluster_config.mysqld.3.1]
NodeId= 13
Dedicated= 1

[cluster_config.mysqld.4.1]
NodeId= 14

[cluster_config.ndbapi.1.1]
NodeId= 21
Dedicated= 1

[cluster_config.ndbapi.2.1]
NodeId= 22
Dedicated= 1

[cluster_config.ndbapi.3.1]
NodeId= 23
Dedicated= 1

[cluster_config.ndbapi.4.1]
NodeId= 24
Dedicated= 1

[mysqld.1.1]
ndb-cluster-connection-pool-nodeids=11,21

[mysqld.2.1]
ndb-cluster-connection-pool-nodeids=12,22

[mysqld.3.1]
ndb-cluster-connection-pool-nodeids=13,23

[mysqld.4.1]
ndb-cluster-connection-pool-nodeids=14,24

[ENV]
NDB_CONNECTSTRING=             @mysql_cluster.1.ndb_connectstring
MASTER_MYPORT=                 @mysqld.1.1.port
MASTER_MYPORT1=                @mysqld.2.1.port
MASTER_MYPORT2=                @mysqld.3.1.port
MASTER_MYPORT3=                @mysqld.4.1.port

NDB_BACKUP_DIR=                @cluster_config.ndbd.1.1.BackupDataDir

